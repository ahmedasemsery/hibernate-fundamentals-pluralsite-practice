<!--
persistence.xml is a standard file name that hibernate will consider to get its data
-->

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!--  we provide name of the persistence unit  -->
    <persistence-unit name="hibernateGettingStarted">
        <!--    persistence will be picked by the hibernate provider    -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--   indicate here the jdbc properties     -->
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/orm_course"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="ahmed"/>
            <!--  dialect to be mysql  -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
            <!--      Show sql code in a formatted way      -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--      Every time program is executed database is created from the scratch      -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
